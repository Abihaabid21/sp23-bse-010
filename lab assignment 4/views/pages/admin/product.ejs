<div class="dropdown me-3">
  <button class="btn btn-secondary dropdown-toggle" type="button" id="sortDropdown" data-bs-toggle="dropdown" aria-expanded="false">
      Sort by
  </button>
  <ul class="dropdown-menu" aria-labelledby="sortDropdown">

      <li><a class="dropdown-item" href="/admin/products/<%= page %>/All" data-sort="All">Default</a></li>
      <li><a class="dropdown-item" href="/admin/products/<%= page %>/price" data-sort="price">Price</a></li>
  </ul>
          </div>
<div class="container mt-5">
    <h1 class="mb-4 text-center text-uppercase text-primary fw-bold">Products</h1>
  
    <!-- Table for Products -->
    <div class="table-responsive">
      <table class="table table-striped table-hover align-middle">
        <thead class="bg-dark text-white">
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Price</th>
            <th>Category</th>
            <th>Picture</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% products.forEach(product => { %>
            <tr>
              <td class="text-muted"><%= product._id %></td>
              <td class="fw-semibold"><%= product.name %></td>
              <td class="text-success">$<%= product.price %></td>
              <td><%= product.category %></td>
              <td>
                <img src="/<%= product.picture %>" class="img-thumbnail border-0 shadow-sm" alt="Product Image" style="max-width: 80px; height: auto;">
              </td>
              <td>
                <a href="/admin/products/edit/<%= product._id %>" class="btn btn-sm btn-primary mb-1">
                  <i class="bi bi-pencil-square"></i> Edit
                </a>
                <a href="/admin/products/delete/<%= product._id %>" class="btn btn-sm btn-danger">
                  <i class="bi bi-trash"></i> Delete
                </a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  
    <!-- Pagination -->
    <nav aria-label="Page navigation example">
      <ul class="pagination justify-content-center mt-4">
        <% for (let index = 1; index <= totalPages; index++) { %>
          <li class="page-item ">
            <a class="page-link" href="/admin/products/<%= index %>"><%= index %></a>
          </li>
        <% } %>
      </ul>
    </nav>
  </div>
  