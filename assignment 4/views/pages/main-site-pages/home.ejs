// JavaScript to hide navbar and right slider when scrolling to footer
window.addEventListener('scroll', function() {
    const footer = document.querySelector('.footer');
    const navbar = document.querySelector('.sticky-navbar');
    const rightSlider = document.querySelector('.right-slider'); // Change this selector as necessary

    // Check if the elements exist
    if (!footer || !navbar || !rightSlider) {
        console.error('One of the elements is not found:', { footer, navbar, rightSlider });
        return; // Exit if any element is not found
    }

    const footerPosition = footer.getBoundingClientRect().top; // Get footer position
    console.log('Footer position:', footerPosition); // Log the footer position

    // Hide navbar and right slider when footer is in view
    if (footerPosition <= window.innerHeight) {
        navbar.style.display = 'none'; // Hide navbar
        rightSlider.style.display = 'none'; // Hide right slider
        console.log('Hiding navbar and right slider'); // Log when hiding
    } else {
        navbar.style.display = 'block'; // Show navbar
        rightSlider.style.display = 'block'; // Show right slider
        console.log('Showing navbar and right slider'); // Log when showing
    }
});


