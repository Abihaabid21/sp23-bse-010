<div class="container mt-5">
    <h1 class="text-center text-uppercase text-primary mb-4">Edit Product</h1>
  
    <form action="/admin/products/edit/<%= product._id %>" method="POST" class="bg-light p-4 rounded shadow">
      <div class="form-group mb-3">
        <label for="name" class="form-label fw-bold">New Product Name:</label>
        <input 
          type="text" 
          id="name" 
          name="name" 
          value="<%= product.name %>" 
          class="form-control" 
          placeholder="Enter product name" 
          required>
      </div>
  
      <div class="form-group mb-3">
        <label for="price" class="form-label fw-bold">New Price:</label>
        <input 
          type="number" 
          id="price" 
          name="price" 
          value="<%= product.price %>" 
          class="form-control" 
          placeholder="Enter product price" 
          required>
      </div>

      <div class="form-group mb-3">
        <label for="picture" class="form-label fw-bold">New Product Image URL:</label>
        <input 
          type="text" 
          id="picture" 
          name="picture" 
          value="<%= product.picture %>" 
          class="form-control" 
          placeholder="Enter image URL" 
          required>
      </div>
  
      <button type="submit" class="btn btn-primary w-100">Update Product</button>
    </form>
  </div>
  