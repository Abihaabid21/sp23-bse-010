<div class="container mt-5">
    <h1 class="text-center text-uppercase text-primary mb-4">Create Category</h1>
  
    <form action="/categories/create" method="POST" class="bg-light p-4 rounded shadow">
      <div class="form-group mb-3">
        <label for="name" class="form-label fw-bold">Category Name:</label>
        <input 
          type="text" 
          name="name" 
          class="form-control" 
          placeholder="Enter category name" 
          required>
      </div>
  
      <button type="submit" class="btn btn-primary w-100">Create</button>
    </form>
  </div>
  